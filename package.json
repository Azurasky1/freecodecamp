  },
  "engines": {
    "node": ">=0.12"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "test": "xo ./**/*.js && mocha ./**/*.spec.js --reporter mochawesome --recursive --reporter-options reportDir=reports,reportName=reports"
